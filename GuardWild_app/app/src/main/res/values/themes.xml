<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.GuardWild" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.GuardWild" parent="Base.Theme.GuardWild" />
    <style name="Theme.GuardWild.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.GuardWild.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.GuardWild.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="SpinnerTextStyle" parent="Theme.AppCompat.Light">
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="SpinnerTransparentBackground" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:popupBackground">@android:color/transparent</item>
    </style>
</resources>